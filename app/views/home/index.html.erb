<h1>Experimental MicroBlogging</h1>
<% if logged_in? %>
    Welcome <%= current_user.username %>! Not you?
    <%= link_to "Log out", logout_path %>
    <% if logged_in? %>



        <table align="center">
          <% for post in Post.find_all_by_user_id(session[:user_id]) %>
              <tr>
                <td>
                  <span><%= post.content %></span>
                </td>
                <td>
                  <span style="font-style: italic;font-size: x-small;"><%= post.created_at %></span>
                </td>
              </tr>
          <% end %>
        </table>
    <% end %>
<% else %>
    <%= link_to "Sign up", signup_path %> or
    <%= link_to "log in", login_path %>.
<% end %>

